*{
    padding: 0;
    margin:0;
    box-sizing: border-box;
    word-wrap: break-word;
    outline: 0;
}
body{
    font-family: "Helvetica","PingFangSC-Regular","Arial","Times New Roman","微软雅黑","Microsoft YaHei",sans-serif;
    color: #000;
    font-size: 16px;
    letter-spacing: 0;
    width: 100%;
    line-height: 1.2;
    overflow-x: hidden;
    height:auto;
}
.clearfix::before,.clearfix::after{
    display: block;
    content: "";
    line-height: 0px;
    height: 0px;
    clear: both;
    visibility: hidden;
}
.layout{
    width: 100%;
    border:1px solid red;
    max-width:640px;
    margin:0 auto;
}
.top{
    width:100%;
    text-align: center;
    height:55px;
    background-color: black;
    color: #fff;
    position: relative;
    max-width: 640px;
}
.top .container{
    margin:0 auto;
    width:100%;
    padding: 10px 20px;
    font-size: 0.8em;
}
.top .container a{
    color: #fff;
}
.top i{
    color: #fff;
    position: absolute;
    top:2px;
    right:2px;
    width:20px;
    height:20px;
    cursor: pointer;
    font-weight: inherit;
    font-size: 0.8em;
}
.nav{
    width:100%;
    background-color: white;
    position: fixed;
    z-index:9;
    padding:0;
    max-width: 640px;
}
.nav .content{
    width:100%;
    padding:0 24px;
    height:50px;
}
.nav .content a{
    display: inline-block;
    line-height: 50px;
    position: relative;
    left: -10px;
    padding: 0 10px;
    color: #000;
}
.nav .content a i{
    width:19px;
    height:14px;
    text-align: center;
}
.nav .content .logo{
    display: block;
    width: 138px;
    position: absolute;
    top:0px;
    left:50%;
    transform: translate(-50%);
}
.nav .content .logo img{
    width:100%;
    height:23px;
    position: relative;
    top:5px;
}
.nav .content .purchase{
    position: absolute;
    right:14px;
    top:0;
}
.nav .content .purchase a{
    display: inline-block;
    line-height: 50px;
    position: relative;
    left: -10px;
    padding: 0 10px;
    color: #000;
}
.nav .content .purchase a i{
    font-size: 0.8em;
}
.nav .content .search{
    position: absolute;
    right:53px;
    top:0;
}
.nav .content .search a{
    display: inline-block;
    line-height: 50px;
    position: relative;
    left: -10px;
    padding: 0 10px;
    color: #000;
}
.nav .content .searchbox{
    width:100%;
    position: absolute;
    left:0;
    top:50px;
    background-color: white;
    height:40px;
    z-index: 9;
    color: #000;
}
.nav .content .searchbox input{
    border:0;
    font-size: 12px;
    width: 100%;
    height: 39px;
    padding: 5px 38px 5px 9px;
    font-family: "微软雅黑";
}
.min-nav{
    padding: 0 20px;
    background: #f2f2f2;
    margin-top: 0;
    height:40px;
    width:100%;
}
.min-nav .wrap{
    overflow: hidden;
    max-width:100%;
    position: relative;
    height:100%;
}
.min-nav .wrap ul{
    list-style:none;
    height:100%;
    position: absolute;
}
.min-nav .wrap ul li{
    float: left;
    display: inline-block;
    vertical-align: top;
    height: 38px;
    line-height: 38px;
    padding: 0 15px;
    font-size: 0.8em;
}
.wrap ul li:first-child {
    padding-left: 0;
}
.min-nav .wrap ul li a{
    text-decoration: none;
    color: #000;
}
.min-nav .wrap span{
    left:0;
    display: none;
    position: absolute;
    bottom:0;
    width:60%;
    height:3px;
    background-color: rgba(0,0,0,1);
}
section{
    padding-top: 88px;
}
.banner{
    width:100%;
    overflow: hidden;
    position: relative;
    font-size: 0;
    padding-bottom: 55px;
}
.banner ul{
    list-style: none;
    position: relative;
    width:700%;
    height:323px;
}
.banner ul li{
    float: left;
    width:14.285%;
}
.banner ul li img{
    width:100%;
    height:50%;
}
.banner .indicators{
    position: absolute;
    bottom:15px;
    padding:10px 0 30px;
    width:100%;
}
.banner .indicators ol{
    list-style: none;
    position: absolute;
    left:50%;
    transform: translateX(-50%);
    width:165px;
}
.banner .indicators ol li{
    float: left;
    margin: 0 9px;
    width: 15px;
    height: 15px;
    border: 1px solid #919191;
    background: #919191;
    border-radius: 50%;
}
.banner .indicators ol .active{
    background-color: black;
}
.common-header{
    width:100%;
    text-align: center;
}

.common-header p{
    letter-spacing: 2px;
    font-size:18px;
    font-weight: bold;
}
