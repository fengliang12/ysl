*{
	padding: 0;
	margin: 0;
	box-sizing: border-box;
}
ul{
	list-style: none;
}
a{
	text-decoration: none;
}
.foot{
    width:100%;
    min-width: 350px;
    margin: 0 auto;
}
.foot .footer_title{
    width: 100%;
    padding: 20px 0;
    height: 80px;
}
.foot .footer_title p{
    width: 60%;
    text-align: center;
    float: left;
    margin-left: 5px;
}
.foot .footer_title a{
    float: right;
    width: 30%;
    height: 30px;
    margin-right: 25px;
    line-height: 30px;
    text-align: center;
    border: 1px solid gray;
    color: #000000;
}


.foot .footer_logo{
    width: 100%;
    padding: 0px;
    height: 80px;
    position: relative;
	max-width:960px;
	padding-left: 30%;
}
.foot .footer_logo a{
    display: inline-block;
    width: 60%;
}
.foot .footer_logo a img{
    width: 100%;
}
.foot .footer_please{
    width: 100%;
    padding-left:30%;
    margin-bottom: 20px;
    position: relative;
    top:0px;
}
.foot .footer_please a{
    float: left;
    width: 58px;
    height: 30px;
    padding: 0 13px;
}
.foot .footer_please span{
	display: inline-block;
	margin-bottom: 10px;
    font-size: 12px;
}
.foot .footer_please .guanzhu{
    text-align: left;
    color: #000000;
}
.foot .footer_please .weibo{
	background: url(../img/icon.png);
	background-size: 354px 354px;
	background-position: -262px -143px;
	width: 32px;
	height: 27px;
}
.foot .footer_please .weixin{
	background: url(../img/icon.png);
	background-size: 354px 354px;
	background-position: -262px -110px;
    width: 33px;
    height: 27px;
}
.foot .footer-bottom{
    width: 100%;
    margin: 0 auto;
    height: 200px;
    background-color: #eee;
    text-align: center;
    padding: 20px 0 0 0;
}
.foot .footer-bottom .statement{
    width: 100%;
    margin: 0 auto;
    text-align: center;
}
.foot .footer-bottom .statement li{
    width: 100%;
    margin-top: 5px;
}
.foot .footer-bottom .statement li:last-child span{
    font-size: 8px;
}
.foot .footer-bottom .con-content{
	overflow: hidden;
}
.foot .footer-bottom .con-content ul{
    margin-top: 10px;
    overflow: hidden;
    text-align: center;
}
.foot .footer-bottom .con-content ul li{
    display: inline-block;
}
.foot .footer-bottom .con-content ul li a{
    color: #000000;
    margin-left:10px;
}